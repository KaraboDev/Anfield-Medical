@model IEnumerable<Anfield.Models.Vaccine>

@{
    ViewData["Title"] = "Index";
}

<h1>View Available Vaccines</h1>
<link rel="stylesheet" href="~/css/ViewCaccine.css" asp-append-version="true" />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VaccineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VaccineType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VaccineDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VaccineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaccineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaccineDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VaccineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VaccineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VaccineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
