@model Anfield.Models.Vaccine

@{
    ViewData["Title"] = "Create";
}

@*<h1>Create</h1>*@
<link rel="stylesheet" href="~/css/AddVaccine.css" asp-append-version="true" />

<h4> Add Vaccine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VaccineName" class="control-label"></label>
                <input asp-for="VaccineName" class="form-control" />
                <span asp-validation-for="VaccineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VaccineType" class="control-label"></label>
                <input asp-for="VaccineType" class="form-control" />
                <span asp-validation-for="VaccineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VaccineDescription" class="control-label"></label>
                <input asp-for="VaccineDescription" class="form-control" />
                <span asp-validation-for="VaccineDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
